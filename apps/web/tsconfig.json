{
  "extends": "../../packages/tsconfig/nextjs.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "types": [
      "node",
      "vitest/globals"
    ],
    "noEmit": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    ".next/types/**/*.ts",
    "src/**/*",
    "next-env.d.ts",
    "next.config.*",
    "vite.config.ts",
    "vitest.setup.ts"
  ],
  "exclude": [
    "**/*.e2e.*"
  ]
}
