{
  "extends": "../../packages/tsconfig/nextjs.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "noEmit": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "types": [
      "node",
      "vitest/globals"
    ]
  },
  "include": [
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx",
    "app/**/*",
    "components/**/*",
    "next-env.d.ts",
    "next.config.*",
    "pages/**/*",
    "src/**/*",
    "types/**/*",
    "vitest-env.d.ts"
  ],
  "exclude": ["**/*.test.ts", "**/*.test.tsx", "**/__tests__/**"]
}