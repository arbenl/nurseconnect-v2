rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Default-deny all access to prevent accidental exposure.
    match /{document=**} {
      allow read, write: if false;
    }

    // Users can create their own profile upon signup.
    // They can only read and update their own document.
    // Role escalation is prevented.
    match /users/{userId} {
      allow create: if request.auth != null;
      allow read, update: if request.auth.uid == userId
                          && request.resource.data.role == resource.data.role;
    }

    // NextAuth collections require access for the adapter.
    // Access is restricted to the owner of the data.
    // Assumes a `userId` field is present on these documents.
    match /accounts/{accountId} {
      allow read, create, update, delete: if request.auth.uid == request.resource.data.userId;
    }

    match /sessions/{sessionId} {
      allow read, create, update, delete: if request.auth.uid == request.resource.data.userId;
    }

    // Verification tokens for email sign-in links.
    // They are short-lived and should not be readable.
    match /verificationTokens/{token} {
      allow create, delete: if true; // Adapter handles token validation
      allow read: if false;
    }
  }
}
