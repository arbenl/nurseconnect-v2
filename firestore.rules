// firestore.rules
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Users
    match /users/{uid} {
      allow read, update: if request.auth != null && request.auth.uid == uid;
      allow create: if request.auth != null && request.auth.uid == uid;
      allow list: if false;
    }

    // Care requests
    match /requests/{id} {
      allow create: if request.auth != null && request.resource.data.patientId == request.auth.uid;
      allow read, update: if request.auth != null
        && (resource.data.patientId == request.auth.uid
            || resource.data.assignedNurseId == request.auth.uid);
      allow delete: if false;
    }

    // Events under a request (server writes only)
    match /requests/{id}/events/{eventId} {
      allow read: if request.auth != null
        && (get(/databases/$(database)/documents/requests/$(id)).data.patientId == request.auth.uid
            || get(/databases/$(database)/documents/requests/$(id)).data.assignedNurseId == request.auth.uid);
      allow write: if false;
    }
  }
}